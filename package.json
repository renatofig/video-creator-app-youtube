{
  "name": "video-creator-app",
  "version": "1.0.0",
  "description": "Aplicativo para automatizar a criação de vídeos de histórias.",
  "main": "main.js",
  "author": "Renato Figueiredo",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@google-cloud/speech": "^6.3.0",
    "@google-cloud/storage": "^7.11.0",
    "form-data": "^4.0.0",
    "googleapis": "^133.0.0",
    "node-cron": "^3.0.3",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.seu-nome.videocreator",
    "productName": "Video Creator App",
    "asarUnpack": [
      "**/node_modules/trash/**/*",
      "**/node_modules/pdf-parse/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/media",
        "to": "default-media",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/config.json",
        "to": "config.json"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    }
  }
}